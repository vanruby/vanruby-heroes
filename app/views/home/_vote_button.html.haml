.button-wrapper.text-center
  .mockup-content
    .morph-button.morph-button-modal.morph-button-modal-2.morph-button-fixed
      %button#vote-button{ type: "button" }
        Vote / Nominate
      .morph-content
        %div
          .content-style-form.content-style-form-1
            %span.close-x
              &#10006;

            %h2 Vote / Nominate

            = simple_form_for @vote do |f|
              %p
                You can pick any Rubyist in Vancouver for the
                %strong #VanRuby Hero Awards!

              %p
                Make it count, as
                %strong you can only vote once.

              = f.input :nominee_id, label: "Nominee Github", :wrapper => :vertical_input_group do
                %span.input-group-addon
                  = "@"
                = f.input_field :nominee_id

              = f.input :reason, label: "Reason", input_html: { maxlength: 160 }

              = f.input :voter_id, label: "Your Github", :wrapper => :vertical_input_group do
                %span.input-group-addon
                  = "@"
                = f.input_field :nominee_id

              = f.button :submit, "Submit"

